{{ 'custom-featured-products.css' | asset_url | stylesheet_tag }}


{% schema %}
{
  "name": "custom-featured-products",
  "tag": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.custom-featured-products.settings.collection.label"
    }
  ]
}
{% endschema %}

<div class="featured-products">
    <h2 class="featured-products__title">Featured Products</h2>
    <script src="{{ 'custom-card-product.js' | asset_url }}" defer="defer"></script>

    <div class="featured-products__products-box">
        {%- for product in section.settings.collection.products -%}
            {% render 'custom-card-product',
                    card_product: product,
                    section_id: section.id
            %}
        {% endfor %}
    </div>
</div>

